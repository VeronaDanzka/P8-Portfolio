---
import BaseLayout from '../layouts/Layout.astro';
---
<BaseLayout>
    <meta slot="head" name="robots" content="noindex, follow">
    <main slot="main" class="flex-grow p-6 container mx-auto">
        <h1 class="text-3xl text-center font-bold mb-4">404 - Page non trouvée</h1>
        <p class="text-lg text-center">Désolé, la page que vous recherchez n'existe pas.</p>
        <a href="/" class="text-blue-500 hover:underline text-center">Retour à la page d'accueil</a>
    </main>
</BaseLayout>
